@page
@model WebComputerFirm.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Внести правки</h1>

<h4>Заказчики</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.CustomerId" />
            <div class="form-group">
                <label asp-for="Customer.CustomerFullName" class="control-label"></label>
                <input asp-for="Customer.CustomerFullName" class="form-control" />
                <span asp-validation-for="Customer.CustomerFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CustomerAddress" class="control-label"></label>
                <input asp-for="Customer.CustomerAddress" class="form-control" />
                <span asp-validation-for="Customer.CustomerAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CustomerPhoneNumber" class="control-label"></label>
                <input asp-for="Customer.CustomerPhoneNumber" class="form-control" />
                <span asp-validation-for="Customer.CustomerPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
