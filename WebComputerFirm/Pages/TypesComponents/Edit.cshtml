            </div>
            <div class="form-group">
                <label asp-for="TypesComponent.TypeDescription" class="control-label"></label>
                <input asp-for="TypesComponent.TypeDescription" class="form-control" />
                <span asp-validation-for="TypesComponent.TypeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
