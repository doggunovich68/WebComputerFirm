@model WebComputerFirm.Pages.TypesComponents.EditModel

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Внести правки</h1>

<h4>Виды комплектующих</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TypesComponent.TypeId" />
            <div class="form-group">
                <label asp-for="TypesComponent.TypeTitle" class="control-label"></label>
                <input asp-for="TypesComponent.TypeTitle" class="form-control" />
