@page
@model WebComputerFirm.Pages.TypesComponents.IndexModel

@{
    ViewData["Title"] = "Список Видов комплектующих";
}

<h1>Список Видов комплектующих</h1>

<p>
    <a asp-page="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TypesComponent[0].TypeTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypesComponent[0].TypeDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TypesComponent) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeDescription)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TypeId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TypeId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
